{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "rootDir": "src",
        "outDir": "lib"
    }
}
